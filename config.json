{
	"server": {
		"port": 3000,
		"path": "localhost:",
		"paths": {
			"createAccount": "/createAccount",
			"login": "/login", 
			"addMove": "/addMove",
			"requestUndo": "/requestUndo",
			"acceptUndo": "/acceptUndo",
			"forfeit": "/forfeit",
			"ratings": "/ratings",
			"update": "/getUpdate",
			"getMatchMaking": "/getMatchMaking",
			"getMatch": "/getMatch",
			"cancelQueue": "/cancelQueue"
		},
		"httpStatusCodes": {
			"success": 200,
			"notModified": 304,
			"validationError": 400,
			"error": 404
		}
	},
	"templates": {
		"forfeit": {
			"forfeit": true
		}
	},
	"queue": {
		"queuePath": "./standardQueue"
	},
	"db": {
		"fakeDataTimeOutWaitTime": 2000,
		"player": {
			"path": "./playerDBMongo",
			"mongo": {
				"url": "mongodb://localhost/player",
				"settings": {
					"db": { 
						"native_parser": true 
					}, 
					"server": { 
						"poolSize": 5,
						"keepAlive": 1 
					}
				}
			}
		},
		"game": {
			"path": "./gameDBMongo",
			"mongo": {
				"url": "mongodb://localhost/game",
				"settings": {
					"db": { 
						"native_parser": true 
					}, 
					"server": { 
						"poolSize": 5,
						"keepAlive": 1 
					}
				}
			}
		}
	}
}
					}
				}
			}
		},
		"game": {
			"path": "./gameDBMongo.js",
			"mongo": {
				"url": "mongodb://localhost/test",
				"settings": {
					"db": { 
						"native_parser": true 
					}, 
					"server": { 
						"poolSize": 5,
						"keepAlive": 1 
					}
				}
			}
		}
	}

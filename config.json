{
	"server": {
		"port": 3000,
		"path": "localhost:",
		"paths": {
			"createAccount": "./createAccount",
			"login": "/login", 
			"addMove": "/addMove",
			"undoMove": "/undoMove",
			"forfeit": "/forfeit",
			"ratings": "/ratings"
		},
		"httpStatusCodes": {
			"success": 200,
			"validationError": 400,
			"error": 404,
		}
	},
	"db": {
		"player": {
			"path": "./playerDBMongo.js",
			"mongo": {
				"url": "mongodb://localhost/test",
